# Mandok Discord Marketplace Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================================
# REQUIRED SETTINGS
# ======================================

# Discord Bot Token (❗Required) 
# Get this from https://discord.com/developers/applications
BOT_TOKEN=your_bot_token_here

# Database Configuration (❗Required)
# PostgreSQL connection string for your database
DATABASE_URL=postgresql://username:password@localhost:5432/mandok_db


# ======================================
# BOT CONFIGURATION
# ======================================

# Rating delay, how many seconds before sending the rating embed. 1 hour = 3600 seconds 
rating_delay_seconds=3600

# Command prefix for text commands (default: !)
COMMAND_PREFIX=!

# Logging configuration
LOG_LEVEL=INFO
# LOG_FILE=logs/mandok.log

# ======================================
# MARKETPLACE SETTINGS
# ======================================

# How long listings stay active (in days)
LISTING_EXPIRY_DAYS=14

# Hours before expiry to send reminder
REMINDER_HOURS_BEFORE_EXPIRY=24

# Maximum listings per user
MAX_LISTINGS_PER_USER=10

# Maximum listings per zone
MAX_LISTINGS_PER_ZONE=100

# ======================================
# REPUTATION SYSTEM
# ======================================

# Minimum reputation required to trade (0.0 = no minimum)
MIN_REPUTATION_FOR_TRADING=0.0

# Enable reputation decay over time
REPUTATION_DECAY_ENABLED=false
REPUTATION_DECAY_DAYS=90

# ======================================
# ROLE MANAGEMENT
# ======================================

# Enable automatic role assignment based on reputation
AUTO_ROLE_MANAGEMENT=true

# Role names for reputation levels
TRUSTED_TRADER_ROLE=Trusted Trader
VERIFIED_TRADER_ROLE=Verified Trader
RESTRICTED_TRADER_ROLE=Restricted Trader

# ======================================
# ADMIN CONFIGURATION
# ======================================

# Admin user IDs (comma-separated)
ADMIN_USER_IDS=123456789012345678,987654321098765432

# Admin role names (comma-separated)
ADMIN_ROLE_NAMES=admin,administrator,mandok admin,marketplace admin

# ======================================
# MODERATION SETTINGS
# ======================================

# Enable content filtering
CONTENT_FILTER_ENABLED=true

# Enable automatic moderation
AUTO_MODERATION_ENABLED=false

# Enable spam detection
SPAM_DETECTION_ENABLED=true

# ======================================
# RATE LIMITING
# ======================================

# Rate limits to prevent spam
RATE_LIMIT_LISTINGS_PER_HOUR=120
RATE_LIMIT_RATINGS_PER_DAY=120
RATE_LIMIT_COMMANDS_PER_MINUTE=560

# ======================================
# NOTIFICATIONS
# ======================================

# Enable DM notifications
DM_NOTIFICATIONS_ENABLED=true

# Enable channel notifications
CHANNEL_NOTIFICATIONS_ENABLED=false

# Enable webhook notifications
WEBHOOK_NOTIFICATIONS_ENABLED=false

# Webhook URLs for notifications
# WEBHOOK_URL=https://discord.com/api/webhooks/...
# ERROR_REPORTING_WEBHOOK=https://discord.com/api/webhooks/...

# ======================================
# FEATURE FLAGS
# ======================================

# Enable queue system for matching buyers/sellers
ENABLE_QUEUE_SYSTEM=true

# Enable party finder functionality (future feature)
ENABLE_PARTY_FINDER=false

# Enable user item suggestions
ENABLE_ITEM_SUGGESTIONS=true

# Enable transaction tracking
ENABLE_TRANSACTION_TRACKING=true

# ======================================
# TIMEZONE SETTINGS
# ======================================

# Default timezone for the bot
DEFAULT_TIMEZONE=UTC

# Time display format (12h or 24h)
TIMEZONE_DISPLAY_FORMAT=12h

# ======================================
# APPEARANCE SETTINGS
# ======================================

# Embed colors (hex values)
EMBED_COLOR_PRIMARY=0x1E40AF
EMBED_COLOR_SUCCESS=0x059669
EMBED_COLOR_WARNING=0xD97706
EMBED_COLOR_ERROR=0xDC2626
EMBED_COLOR_WTS=0xF59E0B
EMBED_COLOR_WTB=0x3B82F6

# ======================================
# DATABASE PERFORMANCE
# ======================================

# Database connection pool settings
DATABASE_POOL_MIN_SIZE=1
DATABASE_POOL_MAX_SIZE=10
DATABASE_COMMAND_TIMEOUT=60

# ======================================
# CACHING SETTINGS
# ======================================

# Enable caching for better performance
ENABLE_CACHING=true

# Cache settings
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# ======================================
# BACKUP SETTINGS
# ======================================

# Enable automatic backups
AUTO_BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# ======================================
# DEVELOPMENT SETTINGS
# ======================================

# Enable debug mode (additional logging)
DEBUG_MODE=false

# Enable test mode (use test database, etc.)
TEST_MODE=false

# Development guild ID for testing commands
# DEVELOPMENT_GUILD_ID=123456789012345678

# ======================================
# EXTERNAL API KEYS (OPTIONAL)
# ======================================

# FFXI database API keys (if available)
# FFXIAH_API_KEY=your_ffxiah_api_key
# FFXIDB_API_KEY=your_ffxidb_api_key

# ======================================
# SECURITY SETTINGS
# ======================================

# Enable additional security checks
ENABLE_SECURITY_CHECKS=true

# Maximum input length for user submissions
MAX_INPUT_LENGTH=2000

# Allowed file types for uploads
ALLOWED_FILE_TYPES=.png,.jpg,.jpeg,.gif

# ======================================
# INSTALLATION NOTES
# ======================================

# 1. Copy this file to .env in your project root
# 2. Fill in at minimum: BOT_TOKEN and DATABASE_URL
# 3. Adjust other settings as needed for your server
# 4. Never commit the .env file with real credentials to version control

# ======================================
# DISCORD BOT SETUP INSTRUCTIONS
# ======================================

# 1. Go to https://discord.com/developers/applications
# 2. Create a new application
# 3. Go to the "Bot" section
# 4. Create a bot and copy the token to BOT_TOKEN above
# 5. Enable the following bot permissions:
#    - Send Messages
#    - Use Slash Commands
#    - Embed Links
#    - Read Message History
#    - Manage Roles (optional, for reputation roles)
#    - Manage Channels (for setup)
# 6. Invite the bot to your server using the OAuth2 URL generator

# ======================================
# DATABASE SETUP INSTRUCTIONS
# ======================================

# Option 1: Local PostgreSQL
# 1. Install PostgreSQL on your system
# 2. Create a database named 'mandok_db'
# 3. Create a user with access to the database
# 4. Use the connection string format above

# Option 2: Supabase (Recommended)
# 1. Go to https://supabase.com
# 2. Create a new project
# 3. Go to Settings > Database
# 4. Copy the connection string to DATABASE_URL
# 5. Optionally set SUPABASE_URL and SUPABASE_KEY

# Option 3: Other PostgreSQL hosts
# - Use any PostgreSQL hosting service
# - Format: postgresql://username:password@host:port/database_name
